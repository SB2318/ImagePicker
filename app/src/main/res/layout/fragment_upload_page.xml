<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upload_btn"
                android:layout_centerHorizontal="true"
                android:text="Upload"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="@drawable/grey_button_bg"
                android:layout_marginTop="36dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:drawableLeft="@drawable/baseline_cloud_upload_24"
                android:drawablePadding="5dp" />

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/upload_btn"
                android:layout_marginStart="3dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="3dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="3dp"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open_gallery_btn"
                android:layout_centerHorizontal="true"
                android:text="Open Gallery"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="@drawable/blue_button_bg"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:drawableRight="@drawable/photo_album_24"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_below="@id/preview_image"
                android:drawablePadding="5dp" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/open_gallery_btn"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:src="@drawable/baseline_arrow_forward_24"
                app:backgroundTint="@color/white"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabSize="normal" />

        </RelativeLayout>

    </ScrollView>
</layout>